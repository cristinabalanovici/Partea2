@page "/"
@model Partea2.Pages.Doctors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].ProgramareID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].DataProgramarii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Programare.NumarulProgramarii)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Doctor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgramareID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataProgramarii)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Programare.NumarulProgramarii)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
